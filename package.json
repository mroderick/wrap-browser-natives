{
  "name": "wrapple",
  "version": "0.2.0",
  "description": "Wrapper for runtime natives to allow stubbing in unit tests.",
  "main": "lib/wrapple.umd.js",
  "jsnext:main": "lib/wrapple.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {},
  "devDependencies": {
    "buster": "0.7.18",
    "buster-istanbul": "0.1.13",
    "eslint": "2.4.0",
    "phantomjs": "1.9.15",
    "rimraf": "2.5.2",
    "rollup": "0.25.6"
  },
  "scripts": {
    "lint": "npm run clean && eslint .",
    "build": "rollup -f umd -n wrapple lib/wrapple.js -o lib/wrapple.umd.js",
    "clean": "rimraf lib/wrapple.umd.js",
    "test": "npm run build && ./scripts/run-tests && npm run clean",
    "prepublish": "npm run build",
    "postpublish": "npm run clean"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mroderick/wrapple.git"
  },
  "author": "Morgan Roderick",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mroderick/wrapple/issues"
  },
  "homepage": "https://github.com/mroderick/wrapple"
}
